{{#if logged_in}}
<aside class="aside">
<div class="card">
  <div class="card-header">
    <h2>Current Book:</h2>
  </div>
  <div class="card-body">
    <h5 class="card-title">{{currentBook.title}}</h5>
    <p class="card-text">By: {{currentBook.author}}</p>
    <p class="card-text">{{currentBook.description}}</p>
  </div>
</div>
</aside>
<div class="row">
<div class="bookclub_blog border border-secondary col">
  <h2 class="blog-header">Blog Post:</h2>
  <p class="blog">Hey everyone! Can't wait to read this month's pick! Let's chat here about the progress of our reading and figure out when to meet up to discuss.</p>
  {{#each posts as |post|}}
  <div class="card">
    <div class="card-body comment">
      <h5 class="card-title comment">{{post.user_name}}</h5>
      <p class="card-text">{{post.comment}}</p>
      <button class="btn btn-primary delete" data-id="{{post.id}}">Delete</button>

    </div>
  </div>
  {{/each}}
    <div class="col">
      <h4>New comment:</h4>
      <form class="new-comment-form">
        <div class="form-group">
          <label for="user-name">Username:</label>
          <input class="form-input" type="text" id="user-name" name="user-name" />
        </div>
        <div class="form-group">
          <label for="comment-desc">Comment:</label>
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" id="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
{{else}}
<div class="bookclubList text-center center col s12">
  <h2>Previous Book Club Reads:</h2>
  <ul class="book_list">
    {{#each booksInOrder as |book|}}
    <li>{{book.title}}</li>
    {{/each}}
  </ul>
</div>
{{/if}}
<script src="./js/blog.js"></script>